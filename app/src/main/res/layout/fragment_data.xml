<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 实时数据展示区（ScrollView） -->
    <ScrollView
        android:id="@+id/scrollViewData"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/llDataContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 加速度计数据 -->
            <TextView
                android:id="@+id/tvAccel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="加速度计：等待数据..."
                android:textSize="16sp" />

            <!-- 陀螺仪数据 -->
            <TextView
                android:id="@+id/tvGyro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="陀螺仪：等待数据..."
                android:textSize="16sp" />

            <!-- 磁强计数据 -->
            <TextView
                android:id="@+id/tvMag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="磁强计：等待数据..."
                android:textSize="16sp" />

            <!-- 气压计数据 -->
            <TextView
                android:id="@+id/tvPressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="气压：等待数据..."
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

    <!-- 修改后的图表和控制面板部分 -->

    <!-- 加速度图表 -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/accel_chart"
        android:layout_width="421dp"
        android:layout_height="153dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollViewData" />

    <!-- 陀螺仪图表 -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/gyro_chart"
        android:layout_width="408dp"
        android:layout_height="144dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/accel_chart" />

    <!-- 控制面板 -->
    <LinearLayout
        android:id="@+id/control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gyro_chart"
        app:layout_constraintVertical_bias="0.275"
        tools:layout_editor_absoluteX="2dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="开始采集" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_stop"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="停止采集" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="保存数据" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
