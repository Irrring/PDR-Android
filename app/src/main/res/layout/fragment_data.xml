<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="15dp"
    android:clipToPadding="false">

    <!-- 顶部数据展示区：占屏幕高度 30% -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/data_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/chart_container"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.35">

        <!-- 加速度计卡片 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/accel_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/gyro_card"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.46"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.46"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintDimensionRatio="1:"
            android:layout_marginEnd="12dp"
            android:backgroundTint="#6200EE">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvAccel"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="加速度计"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvAccelX"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="X: --"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvAccelY"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Y: --"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvAccelZ"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Z: --"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 陀螺仪卡片 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/gyro_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/accel_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.46"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.46"
            app:layout_constraintDimensionRatio="1:"
            android:layout_marginStart="12dp"
            android:backgroundTint="#6200EE">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvGyro"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="陀螺仪"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvGyroX"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="X: --"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvGyroY"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Y: --"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvGyroZ"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Z: --"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 磁强计卡片 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/mag_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/accel_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/pressure_card"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.46"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.46"
            app:layout_constraintDimensionRatio="1:"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="#6200EE">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvMag"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="磁强计"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMagX"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="X: --"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvMagY"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Y: --"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvMagZ"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Z: --"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 气压计卡片 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/pressure_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/gyro_card"
            app:layout_constraintStart_toEndOf="@id/mag_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.46"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.46"
            app:layout_constraintDimensionRatio="1:"
            android:layout_marginTop="20dp"
            android:layout_marginStart="12dp"
            android:backgroundTint="#6200EE">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvPressure"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="气压"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 中间图表区：占屏幕高度 60% -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chart_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/data_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/control_panel"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.5">

        <!-- 加速度图表 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/accel_chart_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/gyro_chart_card"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.45"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/accel_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <!-- 陀螺仪图表 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/gyro_chart_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/accel_chart_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.45"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/gyro_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 底部控制面板：占屏幕高度 10% -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/control_panel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.10"
        app:layout_constraintHeight_min="64dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#6200EE"
            app:icon="@android:drawable/ic_media_play"
            app:iconGravity="textEnd"
            app:iconTint="#FFFFFF"
            app:iconPadding="0dp"
            app:cornerRadius="8dp"
            app:rippleColor="#BB86FC"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.9"
            app:layout_constraintHeight_min="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_stop"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:contentDescription="开始采集"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_stop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#6200EE"
            app:icon="@android:drawable/ic_media_play"
            app:iconGravity="textEnd"
            app:iconTint="#FFFFFF"
            app:iconPadding="0dp"
            app:cornerRadius="8dp"
            app:rippleColor="#BB86FC"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.9"
            app:layout_constraintHeight_min="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_start"
            app:layout_constraintEnd_toStartOf="@id/btn_save"
            android:contentDescription="停止采集"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#6200EE"
            app:icon="@android:drawable/ic_media_play"
            app:iconGravity="textEnd"
            app:iconTint="#FFFFFF"
            app:iconPadding="0dp"
            app:cornerRadius="8dp"
            app:rippleColor="#BB86FC"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.9"
            app:layout_constraintHeight_min="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_stop"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="保存数据"
            android:layout_marginStart="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>